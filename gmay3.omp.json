{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#d4ac0d",
          "foreground": "#000000",
          "powerline_symbol": "",
          "properties": {
            "time_format": "<b>15:04</b>:05"
          },
          "template": "{{.CurrentDate | date .Format }}",
          "type": "time"
        },
        {
	"background": "#BF1D69",
        "foreground": "#FFFFFF",
          "powerline_symbol": "",
          "template": " {{ .HostName }} ",
          "type": "time"
        },
        {
          "background": "#000000",
          "foreground": "#fc2189",
          "powerline_symbol": "",
          "properties": {
            "style": "full",
            "folder_icon": ""
          },
          "style": "diamond",
          "template": " $(pwd)   <b>$(ls |wc -l)  </b>",
          "type": "path",
          "font-weight": "bold"
        },
        {
          "background": "#f5f26e",
          "foreground": "#000000",
          "powerline_symbol": "",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#000000",
          "foreground": "#FFFAB2",
          "style": "powerline",
          "template": "$(if [ ! -z \"$country_code\" ]; then first_letter=$(printf \"%d\" \"'$(echo $country_code | cut -c1)\"); second_letter=$(printf \"%d\" \"'$(echo $country_code | cut -c2)\"); first_unicode=$(printf \"\\\\U$(printf '%x' $((first_letter + 127462 - 65)))\"); second_unicode=$(printf \"\\\\U$(printf '%x' $((second_letter + 127462 - 65)))\"); echo -e \"$first_unicode$second_unicode \"; else echo ' Unknown '; fi)",
          "type": "session",
          "powerline_symbol": "",
          "font-weight": "bold"
        },
        {
          "background": "#000000",
          "foreground": "#FFFAB2",
          "properties": {
            "style": "full",
            "folder_icon": ""
          },
          "style": "powerline",
          "template": "$(bash ~/themes/cpu_usage.sh)",
          "type": "path",
          "font-weight": "bold",
          "powerline_symbol": ""
        },
        {
          "background": "#6806c4",
          "foreground": "#FFFFFF",
          "template": "$(python_version=$(command -v python >/dev/null 2>&1 && python --version 2>&1 | awk '{print $2}' || echo ''); conda_env=$(echo $CONDA_DEFAULT_ENV); if [ -z \"$conda_env\" ] && [ -z \"$python_version\" ]; then echo ''; else echo \"$conda_env,$python_version\"; fi)",
          "type": "session",
          "powerline_symbol": "",
          "style": "powerline",
          "font-weight": "bold"
        },
        {
          "background": "#BF1D69",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "properties": {
            "time_format": "Mon 2-1-2006"
          },
          "style": "powerline",
          "template": "{{ .CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "background": "#072bf7",
          "foreground": "#FFFFFF",
          "properties": {
            "style": "full",
            "folder_icon": ""
          },
          "style": "powerline",
          "powerline_symbol": "",
          "template": "{{.UserName }}",
          "type": "path",
          "font-weight": "bold"
        },
        {
          "background": "#4caf50",
          "foreground": "#FFFAB2",
          "powerline_symbol": "",
          "properties": {
            "time_format": "Mon 2-1-2006 "
          },
          "style": "powerline",
          "template": "$weather_temperature",
          "type": "time"
        },
        {
          "background": "#6CA35E",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "style": "powerline",
          "template": "  {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#2e9599",
          "background_templates": [
            "{{ if gt .Code 0 }}#f1184c{{ end }}"
          ],
          "foreground": "#ffffff",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " ",
          "trailing_diamond": "",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f1184c",
          "style": "plain",
          "template": "           ➤",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
