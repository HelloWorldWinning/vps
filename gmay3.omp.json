{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#072bf7",
          "foreground": "#FFFFFF",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "time_format": "<b>15:04</b>:05"
          },
          "template": "{{.CurrentDate | date .Format }}",
          "type": "time"
        },
        {
          "background": "#000000",
          "foreground": "#FFFAB2",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "time_format": "<b>03:04</b>:05PM"
          },
          "template": " <b>{{ .HostName }}<\b> ",
          "type": "time"
        },
        {
          "background": "#BF1D69",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "full",
	        "folder_icon": ""
          },
          "style": "diamond",
	  "template": "$(pwd)   <b>$(ls |wc -l) </b>",
          "type": "path",
	  "font-weight":"bold"
        },
	 {
          "background": "#000000",
          "foreground": "#FFFAB2",
          "style": "powerline",
	  "template": "$(if [ ! -z \"$country_code\" ]; then first_letter=$(printf \"%d\" \"'$(echo $country_code | cut -c1)\"); second_letter=$(printf \"%d\" \"'$(echo $country_code | cut -c2)\"); first_unicode=$(printf \"\\\\U$(printf '%x' $((first_letter + 127462 - 65)))\"); second_unicode=$(printf \"\\\\U$(printf '%x' $((second_letter + 127462 - 65)))\"); echo -e \"$first_unicode$second_unicode \"; else echo ' Unknown '; fi)",

          "type": "session",
          "powerline_symbol": "\ue0b0",
          "font-weight":"bold"
        },
        {
          "background": "#072bf7",
          "foreground": "#FFFFFF",
          "style": "powerline",
          "template": "$(python_version=$(command -v python >/dev/null 2>&1 && python --version 2>&1 | awk '{print $2}' || echo ''); conda_env=$(echo $CONDA_DEFAULT_ENV); if [ -z \"$conda_env\" ] && [ -z \"$python_version\" ]; then echo ''; else echo \"($conda_env,$python_version)\"; fi)",

          "type": "session",
          "powerline_symbol": "\ue0b0",
	  "font-weight":"bold"
        },
        {
          "background": "#072bf7",
          "foreground": "#FFFFFF",
          "properties": {
            "style": "full",
	        "folder_icon": ""
          },
          "style": "powerline",
	  "template": "{{.UserName }} $(bash ~/themes/cpu_usage.sh)",
          "type": "path",
	  "font-weight":"bold"
        },
        {
          "background": "#BF1D69",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "time_format": "Mon 2-1-2006"
          },
          "style": "powerline",
          "template": "{{ .CurrentDate | date .Format }}",
          "type": "time"
        },

        {
          "background": "#4caf50",
          "foreground": "#FFFAB2",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "time_format": "Mon 2-1-2006 "
          },
          "style": "powerline",
          "template": "$weather_temperature",
          "type": "time"
        },
        {
          "background": "#fffb38",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#6CA35E",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#2e9599",
          "background_templates": [
            "{{ if gt .Code 0 }}#f1184c{{ end }}"
          ],
          "foreground": "#ffffff",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " \ueb05",
          "trailing_diamond": "\ue0b4",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f1184c",
          "style": "plain",
          "template": "       \uf04b",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
